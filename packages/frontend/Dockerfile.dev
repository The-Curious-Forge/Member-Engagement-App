FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy application code
COPY . .

# Expose the port the app runs on
EXPOSE 5174

# Command to run the application in development mode
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5174"]